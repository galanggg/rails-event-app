<%= form_with(model: @event, local: true) do |e| %>
<div class="pt-10 sm:mt-0">
  <div class="">
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= render "shared/errors", object: event %>
      <div class="shadow-lg overflow-hidden sm:rounded-md">
        <div class="px-4 py-5 bg-white sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
              <%= e.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= e.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-indigo-600 rounded-md px-4 py-2" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= e.label :location, class: "block text-sm font-medium text-gray-700" %>
              <%= e.text_field :location, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-indigo-600 rounded-md px-4 py-2" %>
            </div>

            <div class="col-span-6 sm:col-span-6">
              <%= e.label :description, class: "block text-sm font-medium text-gray-700" %>
              <%= e.text_area :description, rows: 4, cols: 50, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-indigo-600 rounded-md px-4 py-2" %>
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <%= e.label :start_at, class: "block text-sm font-medium text-gray-700" %>
              <%= e.date_field :start_at, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-indigo-600 rounded-md px-4 py-2" %>
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <%= e.label :price, class: "block text-sm font-medium text-gray-700" %>
              <%= e.number_field :price, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-indigo-600 rounded-md px-4 py-2" %>
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <%= e.label :capacity, class: "block text-sm font-medium text-gray-700" %>
              <%= e.number_field :capacity, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border border-indigo-600 rounded-md px-4 py-2" %>
            </div>
          </div>
        </div>
        <div class="flex flex-row justify-end px-4 py-3 bg-gray-50 text-right sm:px-6">
          <%= link_to "Cancel", root_path, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-400 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-4" %>
          <%= e.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600  focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>